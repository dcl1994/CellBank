<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activity.StemCellsActivity"
    android:background="@drawable/bg_stemcell"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/stemcell_top"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingBottom="4dip"
        android:paddingTop="3dip"
        android:background="@drawable/title_bk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stemcell"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:drawableLeft="@drawable/share_return"
            android:gravity="center_vertical"
            android:text="@string/return_text"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="截屏自动分享"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <!--页面布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <include  layout="@layout/menubottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看"
            android:drawableLeft="@drawable/onclick"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="温馨提示:存储了干细胞的用户才能看到数据哦"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/layout_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本资料："
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/cellname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@+id/cellname"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/savewhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@+id/number"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />

        <TextView
            android:id="@+id/jl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@+id/savewhere"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/save_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@+id/jl_time"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
    </LinearLayout>
    <!--温度-->
    <LinearLayout
        android:id="@+id/layout_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="温度:"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/yedan_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/yedan_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"

            />
        <TextView
            android:id="@+id/qidan_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"

            />
        <TextView
            android:id="@+id/qidan_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/yp_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
        <TextView
            android:id="@+id/gttop_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/zone_list_username"
            />
    </LinearLayout>

    <!--液位-->
<LinearLayout
    android:id="@+id/layout_04"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="液位:"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textColor="@color/zone_list_username"
        />

    <TextView
        android:id="@+id/liquid_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/zone_list_username"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>

    <!--报警-->
        <LinearLayout
            android:id="@+id/layout_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="报警："
                android:textSize="14sp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/zone_list_username"
                />
            <TextView
                android:id="@+id/liquid_level_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/zone_list_username"
                />
            <TextView
                android:id="@+id/liquid_level_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/zone_list_username"
                />
            <TextView
                android:id="@+id/temperature_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/zone_list_username"
                />
            <TextView
                android:id="@+id/temperature_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/zone_list_username"
                />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
<!--截屏自动分享-->
    <cn.sharesdk.onekeyshare.ui.ThumbnailLayout
        android:id="@+id/thumbLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </cn.sharesdk.onekeyshare.ui.ThumbnailLayout>
</LinearLayout>
