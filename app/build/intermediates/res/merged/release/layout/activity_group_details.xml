<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/stemcell_top"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingBottom="4dip"
        android:paddingTop="3dip"
        android:background="@drawable/title_bk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_details"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:drawableLeft="@drawable/share_return"
            android:gravity="center_vertical"
            android:text="@string/return_text"
            android:textColor="@color/white"
            android:textSize="14sp"/>
        <LinearLayout
            android:id="@+id/toolbar_menu"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@drawable/image_add"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_doctor"/>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/textgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群名称:"
            android:textColor="@color/blackmin"
            android:layout_margin="10dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blackmin"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:maxLines="3"
            android:layout_toRightOf="@+id/textgroup"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textgroupdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群简介:"
            android:textColor="@color/blackmin"
            android:layout_margin="10dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/groupdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blackmin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:maxLines="5"
            android:layout_toRightOf="@+id/textgroupdes"/>
    </RelativeLayout>
    <Button
        android:id="@+id/joingroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="40dp"
        android:textColor="#fff"
        android:background="@drawable/image_btn"
        android:text="加入群聊"/>
</LinearLayout>
