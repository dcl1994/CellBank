<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relay"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingBottom="4dip"
        android:paddingTop="3dip"
        android:background="@drawable/title_bk">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/topic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:drawableLeft="@drawable/share_return"
            android:gravity="center_vertical"
            android:text="@string/return_text"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/submit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/title_bk"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="@string/topic_btn"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:gravity="top"
        android:hint="@string/topic_title"
        android:background="@drawable/edittext_bg_shape"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHint="#ffcbcbcb"
        android:textSize="16.0sp"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

    <EditText
        android:id="@+id/topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="top"
        android:hint="@string/topic_content"
        android:background="@drawable/edittext_bg_shape"
        android:minHeight="170.0dip"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHint="#ffcbcbcb"
        android:textSize="16.0sp"
        />
        <com.example.util.MyGridView
            android:id="@+id/noScrollgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:horizontalSpacing="2dp"
            android:gravity="center_horizontal"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0.0dip"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(友情提示:只能添加6张图片)"
        android:textColor="@color/text_color"
        android:layout_marginLeft="10dp"
        />
</LinearLayout>
