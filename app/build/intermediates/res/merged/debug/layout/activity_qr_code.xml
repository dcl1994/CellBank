<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qrcodebg">
    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/stemcell_top"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingBottom="4dip"
        android:paddingTop="3dip"
        android:background="@drawable/title_bk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myqrcode"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:drawableLeft="@drawable/share_return"
            android:gravity="center_vertical"
            android:text="@string/user"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <!--我的二维码-->
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/userimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/qrcode_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userimg"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blackmin"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/qrcode_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qrcode_username"
            android:layout_toRightOf="@+id/userimg"
            android:textColor="@color/blackmin"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:id="@+id/qrcodeimg"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myqrcodecomment"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"
            />

    </RelativeLayout>
</RelativeLayout>
