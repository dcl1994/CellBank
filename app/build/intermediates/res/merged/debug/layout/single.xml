<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_toRightOf="@+id/coimgload"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/single">
    <TextView
        android:id="@+id/cotext_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/coteamcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:lines="2"
        android:layout_below="@+id/cotext_title"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/cotime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
    <com.example.util.CircleImageView
        android:id="@+id/coimgload"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />
    </FrameLayout>